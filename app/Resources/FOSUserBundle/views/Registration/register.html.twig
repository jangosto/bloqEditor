{% extends "admin/layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <form rol="form" action="{{ path('admin_users_create') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.firstName, "Nombre") }}
                        {{ form_errors(form.firstName) }}
                        {{ form_widget(form.firstName, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.lastName, "Apellidos") }}
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.lastName, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.username, "Nombre de Usuario") }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.email, "Correo Electr√≥nico") }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.roles, "Permisos") }}
                        {{ form_errors(form.roles) }}
                        {{ form_widget(form.roles) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div>
                        <input type="submit" class= "btn btn-default" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}">
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
</div>

